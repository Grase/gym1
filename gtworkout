    <script>
        function switchWeek(week) {
            document.querySelectorAll(".workout").forEach(w => w.style.display = "none");
            document.getElementById("week" + week).style.display = "block";

            document.querySelectorAll(".tab").forEach(t => t.classList.remove("active"));
            document.querySelectorAll(".tab")[week - 1].classList.add("active");
        }

        function resetChecklist(weekId) {
            document.querySelectorAll("#" + weekId + " input[type=checkbox]").forEach(cb => cb.checked = false);
        }

        // Show Week 1 by default
        switchWeek(1);
    </script>

